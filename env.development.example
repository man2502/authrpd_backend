NODE_ENV=development
CURRENT_ENV=development
HOST=0.0.0.0
PORT=3000

DB_HOST=localhost
DB_PORT=5432
DB_NAME=authrpd_dev
DB_USER=authrpd_user
DB_PASSWORD=dev_password_123

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

RSA_KEYS_DIR=./keys/rsa

AUDIENCE=RPD
ISSUER=AUTHRPD

ACCESS_TTL_SECONDS=1200
REFRESH_TTL_DAYS=60

# Logging Configuration
LOG_LEVEL=debug
SERVICE_NAME=authrpd
GRAYLOG_ENABLED=false
GRAYLOG_HOST=localhost
GRAYLOG_PORT=12201
GRAYLOG_PROTOCOL=udp

# Security - CORS Configuration
# Comma-separated list of allowed origins for development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# Security - Rate Limiting
# Global rate limiter: window in milliseconds and max requests per window
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
# Authentication endpoints rate limiter (stricter)
AUTH_RATE_LIMIT_MAX=20

# Security - Request Body Size Limits
# Maximum size for JSON and URL-encoded request bodies
BODY_JSON_LIMIT=10mb
BODY_URLENC_LIMIT=10mb

# Security - HSTS (HTTP Strict Transport Security)
# Maximum age in seconds (31536000 = 1 year)
# In development, can be set lower or disabled
HSTS_MAX_AGE=31536000

# Security - Trust Proxy
# Set to 'true' or '1' if behind reverse proxy (nginx, load balancer)
# In development, usually false unless using a proxy
TRUST_PROXY=false

# Swagger Documentation
# Enable/disable Swagger UI and OpenAPI documentation
# In development, enabled by default (set to false to disable)
# In production, disabled by default (set to true to enable)
SWAGGER_ENABLED=true
API_BASE_URL=http://localhost:3000

