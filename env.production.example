NODE_ENV=production
CURRENT_ENV=production
HOST=0.0.0.0
PORT=3000

DB_HOST=postgres
DB_PORT=5432
DB_NAME=authrpd
DB_USER=authrpd_user
DB_PASSWORD=production_secret_password_change_me

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_production_password_change_me

RSA_KEYS_DIR=/app/keys/rsa

AUDIENCE=RPD
ISSUER=AUTHRPD

ACCESS_TTL_SECONDS=1200
REFRESH_TTL_DAYS=60

# Logging Configuration
LOG_LEVEL=info
SERVICE_NAME=authrpd
GRAYLOG_ENABLED=true
GRAYLOG_HOST=graylog.example.com
GRAYLOG_PORT=12201
GRAYLOG_PROTOCOL=udp

# Security - CORS Configuration
# Comma-separated list of allowed origins for production
# IMPORTANT: Update with your actual production domains
CORS_ORIGINS=https://example.com,https://admin.example.com,https://budget.example.com
CORS_ALLOW_CREDENTIALS=true

# Security - Rate Limiting
# Global rate limiter: window in milliseconds and max requests per window
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
# Authentication endpoints rate limiter (stricter)
AUTH_RATE_LIMIT_MAX=20

# Security - Request Body Size Limits
# Maximum size for JSON and URL-encoded request bodies
BODY_JSON_LIMIT=10mb
BODY_URLENC_LIMIT=10mb

# Security - HSTS (HTTP Strict Transport Security)
# Maximum age in seconds (31536000 = 1 year)
# CRITICAL: Set to 1 year for production
HSTS_MAX_AGE=31536000

# Security - Trust Proxy
# Set to 'true' or '1' if behind reverse proxy (nginx, load balancer)
# CRITICAL: Must be true in production if using nginx/load balancer
TRUST_PROXY=true

# Swagger Documentation
# Enable/disable Swagger UI and OpenAPI documentation
# In production, disabled by default for security
# Set to true only if you need documentation (e.g., internal docs server)
SWAGGER_ENABLED=false
API_BASE_URL=https://api.authrpd.gov

